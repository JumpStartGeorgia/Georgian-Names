<h1>
  District: <%= params[:id] %>
</h1>

<h3>
  Number of People Living in this District: <%= number_with_delimiter(@population.count) %>
</h3>

<div class="row">
  <div class="span4">
    <h3><%= t('app.common.first_name')%></h3>
    <ol class="standard">
    <% @district_first_names.each do |district| %>
      <li>
        <%= link_to district.name.name, first_name_path(district.name.name) %><%= ": #{number_with_delimiter(district.count)}" %>
      </li>
    <% end %>
    </ol>
    <p>
    Total Unique First Names: <%= number_with_delimiter(@total_first.count)%>
    </p>
   </div> 
  <div class="span4">
    <h3><%= t('app.common.last_name')%></h3>
    <ol class="standard">
    <% @district_last_names.each do |district| %>
      <li>
        <%= link_to district.name.name, last_name_path(district.name.name) %><%= ": #{number_with_delimiter(district.count)}" %>
      </li>
    <% end %>
    </ol>
    <p>
    Total Unique Last Names: <%= number_with_delimiter(@total_last.count)%>
    </p>
   </div>  
</div>   