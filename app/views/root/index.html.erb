<script type="text/javascript" src="http://mbostock.github.com/d3/d3.js?2.6.0"></script>

<div class="row-fluid">
  <div class="span8" id="stats">
    <div class="row-fluid">
      <div class="span4">
        <h4>Source</h4>
        CEC Voters List
      </div>
      <div class="span4">
        <h4>When</h4>
        August 2012
      </div>
      <div class="span4">
        <h4>Where</h4>
        Georgia
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4">
        <h4>People</h4>
        4,638,880
      </div>
      <div class="span4">
        <h4>Districts</h4>
        75
      </div>
      <div class="span4">
        <h4>Precincts</h4>
        3,648
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4" id="names">
        <div>
          <h4>First Names</h4>
          47,180
        </div>
        <div>
          <h4>Last Names</h4>
          74,481
        </div>
      </div>
      <div class="span4" id="districts">
        <div>
          <h4>Largest District</h4>
          Kutaisi - 163,083
        </div>
        <div>
          <h4>Smallest District</h4>
          Kazbegi - 5,788
        </div>
      </div>
      <div class="span4" id="ages">
        <div>
          <h4>Oldest Person</h4>
          132
        </div>
        <div>
          <h4>Most Popular Age</h4>
          22 - 75,672
        </div>
      </div>
    </div>
  </div>
  <div class="span4" style="text-align: center;">
    <%= form_tag search_first_name_path, :method => :get do %>
      <div class="control-group">
        <h2><%= t('.search_first_name') %></h2>
    		<%= text_field_tag 'name' %>
  		</div>
    <% end %>

    <%= form_tag search_last_name_path, :method => :get do %>
      <div class="control-group">
        <h2><%= t('.search_last_name') %></h2>
    		<%= text_field_tag 'name' %>
  		</div>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <div id="chart_top_fnames"></div>
  </div>
  <div class="span6">
    <div id="chart_top_lnames"></div>
  </div>
</div>

<div id="chart_age_population"></div>

  <div id="map_container">
    <div id="map"></div>
    <div id="map_legend">
      <h3><%= t('charts.map.all.legend')%></h3>
      <ul>
        <% @color_legend.each do |color|%>
          <li>
            <span style="background-color: <%=color[:color]%>; border: solid 1px #333;">&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <%= color[:rank] %>
          </li>
        <% end %>
      </ul>
    </div>
    <div id="map_info_box" style="display: none;">
      <ul>
        <li>
          <%= "#{t('charts.map.district')}:"%> <span id="map_district_name"></span>
        </li>
        <li>
          <%= "#{t('charts.map.total')}:"%> <span id="map_district_count"></span>
        </li>
      </ul>
    </div>
  </div>
