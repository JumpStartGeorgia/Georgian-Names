<div class="row">
  <div class="span4">
    <h3><%= t('app.common.first_name')%></h3>
    
    <%= form_tag search_first_name_path, :method => :get, :class => "form-inline" do %>
			<%= text_field_tag 'name' %>

			<%= submit_tag t('helpers.links.search'), :class => 'btn btn-primary' %>
    <% end %>
    
    <ol class="standard">
    <% @top_first.each do |name| %>
      <li>
        <%= link_to name.name, first_name_path(name.name) %><%= ": #{number_with_delimiter(name.count)}" %>
      </li>
    <% end %>
    </ol>
    <p>
    Total First Names: <%= number_with_delimiter(@total_first.count)%>
    </p>
   </div> 
  <div class="span4">
    <h3><%= t('app.common.last_name')%></h3>

    <%= form_tag search_last_name_path, :method => :get, :class => "form-inline" do %>
			<%= text_field_tag 'name' %>

			<%= submit_tag t('helpers.links.search'), :class => 'btn btn-primary' %>
    <% end %>

    <ol class="standard">
    <% @top_last.each do |name| %>
      <li>
        <%= link_to name.name, last_name_path(name.name) %><%= ": #{number_with_delimiter(name.count)}" %>
      </li>
    <% end %>
    </ol>
    <p>
    Total Last Names: <%= number_with_delimiter(@total_last.count)%>
    </p>
   </div>  
</div>   